                <div class="card-header">
                    <h3>@employee.Name</h3>
                </div>
                <img class="card-img-top imageThumbNail" src="@photoPath" />`
                <div class="card-footer text-center">
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@employee.EncryptedId" class="btn btn-primary m-1">View</a>

                    <!--@Html.ActionLink("View","details","home", new  {id = employee.Name })-->
