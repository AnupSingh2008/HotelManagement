@model RoomsViewModel
@*@inject IEmployee _employee;*@
@{
    ViewData["Title"] = "Create Rom";

}
    <form asp-controller="Rooms" asp-action="create" method="post">


        <div class="form-group row">
            <label asp-for="RoomNumebr" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="RoomNumebr" class="form-control" placeholder="Room Number">
                <span asp-validation-for="RoomNumebr" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="types" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="types" class="custom-select mr-sm-2"
                        asp-items="Html.GetEnumSelectList<Types>()">
                    <option value="">Please Select</option>
                </select>
                <span asp-validation-for="types" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="PhoneNumber" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="IsResearved" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-1">
                <input asp-for="IsResearved" class="form-control form-check" placeholder="Email">
            </div>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>

    </form>

