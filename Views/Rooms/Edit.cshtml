 @model RoomsViewModel

@{
    ViewData["Title"] = "Edit Room";
     

}
<form  asp-controller="Rooms" asp-action="Edit" method="post">
   <input hidden asp-for="Id"/>
    
    <div class="form-group row">
        <label asp-for="RoomNumebr" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoomNumebr" class="form-control" placeholder="Name">
            <span asp-validation-for="RoomNumebr" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="types" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="types" class="custom-select mr-sm-2"
                    asp-items="Html.GetEnumSelectList<Types>()">
                <option value="">Please Select</option>
            </select>
            <span asp-validation-for="types" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="PhoneNumber" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="PhoneNumber" class="form-control" placeholder="Email">
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="IsResearved" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-1">
            
                <input asp-for="IsResearved" class="form-control form-check" placeholder="Email">
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="index" asp-controller="Rooms" class="btn btn-primary">Cancel</a>
        </div>
    </div>
   

</form>

